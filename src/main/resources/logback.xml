<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="main" class="ch.qos.logback.core.FileAppender">
        <file>teachnet.main.log</file>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{10} [%file:%line] %msg%n</pattern>
        </layout>
    </appender>

    <appender name="debug" class="ch.qos.logback.core.FileAppender">
        <file>teachnet.debug.log</file>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{10} [%file:%line] %msg%n</pattern>
        </layout>
    </appender>

    <logger level="DEBUG">
        <appender-ref ref="debug"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="main"/>
    </root>
</configuration>
